#Deploy a storage account with cool tier using Powershell
New-AzureRmStorageAccount -ResourceGroupName Armkey -Name mystorageacc8 -Location eastus -SkuName Standard_LRS -Kind BlobStorage -AccessTier Cool

PS C:\Users\gajanan.kotpelliwar> New-AzureRmStorageAccount -ResourceGroupName Armkey -Name mystorageacc8 -Location eastus -SkuName Standard_LRS -Kind BlobStorage -AccessTier Cool

